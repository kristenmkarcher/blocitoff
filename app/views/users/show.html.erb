<div class="row">
  <div class="col-md-8">
    <h2>Email: <%= @user.email %></h2>
    <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
    <h3>To-do list</h3>
    <% @items.each do |item| %>
      <p><%= item.name %></p>
      <%= distance_of_time_in_words(Time.now, item.created_at + 7.days) %>
      <%= link_to "", [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok' %>
      <% end %>
  </div>
</div>
